<odoo>
    <!--    <?xml version="1.0" encoding="utf-8"?>-->


    <!--tree view of the project model-->

    <record id="project_tree_view" model="ir.ui.view">
        <field name="name">project.costs.tree</field>
        <field name="model">project.costs</field>
        <field name="arch" type="xml">
            <tree string="Project">
                <field name="name_seq"/>
                <field name="project_name"/>
                <field name="company_id"/>
                <field name="project_responsable"/>
                <field name="customer"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="adresse"/>
                <field name="city"/>
            </tree>
        </field>
    </record>

    <!--form view of the patient model-->
    <record id="project_form" model="ir.ui.view">
        <field name="name">Projects.costs.form</field>
        <field name="model">project.costs</field>
        <field name="arch" type="xml">
            <form string="Project">

                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">

                        <group>
                            <label for="project_name" string="Projet" class="col-3 col-lg-3 o_light_label"/>
                            <h1>
                                <field name="project_name"/>
                            </h1>
                        </group>
                    </div>
                    <group>
                        <group>
                            <field name="project_responsable"/>
                            <field name="customer"/>

                            <field name="project_description"/>

                            <field name="signed_contract"/>

                            <field name="company_id"/>
                            <!--                            <field name="total_costs"/>-->
                            <field name="total_material_costs"/>
                            <field name="total_service_costs"/>
                            <field name="total_overhead_costs"/>
                            <label for="total_costs"/>

                            <div>
                                <h1>
                                    <field name="total_costs"/>
                                </h1>
                            </div>
                            <!--                            <field name="total_costs"/>-->
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="adresse"/>
                            <field name="city"/>
                            <field name="country_id"/>
                        </group>
                    </group>
                    <separator string="Outils"/>
                    <notebook>
                        <page name="info" string="Materiels">
                            <field name="tools_lines" nolabel="1">
                                <tree editable="top">

                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_material_costs" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <!--                                                                <field name="tax_id" widget="monetary"-->
                                <!--                                                                       options="{'currency_field': 'currency_id'}"/>-->
                                <!--                                <div class="oe_subtotal_footer_separator oe_inline">-->
                                <!--                                    <label for="remaining_salary"/>-->
                                <!--                                </div>-->
                                <!--                                <field name="remaining_salary" nolabel="1" class="oe_subtotal_footer_separator"-->
                                <!--                                       widget="monetary" options="{'currency_field': 'currency_id'}"/>-->
                            </group>
                        </page>

                    </notebook>
                    <separator string="Services projet"/>
                    <notebook>
                        <page name="info" string="Services">
                            <field name="service_lines" nolabel="1">
                                <tree editable="top">
                                    <field name="product_id"/>
                                    <!--                                    <field name="name"/>-->
                                    <field name="qty"/>
                                    <field name="uom_id"/>
                                    <field name="price_unit"/>
                                    <field name="tax_id"/>
                                    <!--                                    <field name="price_subtotal"/>-->
                                    <field name="price_total"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_service_costs" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </page>
                    </notebook>
                    <separator string="Location des vÃ©hicules"/>
                    <notebook>
                        <page name="info" string="Location">
                            <!--                                                                <field name="vehicle_id"/>-->
                            <field name="order_line" nolabel="1">
                                <tree editable="top">
                                    <!--                                    <field name="order_id"/>-->
                                    <!--                                    <field name="name"/>-->
                                    <!--                                    <field name="vehicle_id"/>-->
                                    <field name="vehicle_id"/>
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="product_uom"/>
                                    <field name="price_unit"/>
                                    <field name="price_tax"/>
                                    <!--                                    <field name="price_subtotal"/>-->
                                    <field name="price_subtotal"/>
                                    <field name="price_total"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_service_costs" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </page>
                    </notebook>
                    <separator string="Artisans"/>
                    <notebook>
                        <page name="info" string="Location">
                            <field name="service_lines" nolabel="1">
                                <tree editable="top">

                                    <field name="product_id"/>
                                    <!--                                    <field name="name"/>-->
                                    <field name="qty"/>
                                    <field name="uom_id"/>
                                    <field name="price_unit"/>
                                    <field name="tax_id"/>
                                    <!--                                    <field name="price_subtotal"/>-->
                                    <field name="price_total"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_renting_costs" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </page>
                    </notebook>

                    <separator string="Main d'Oeuvre"/>
                    <notebook>
                        <page name="info" string="Main d'Oeuvre">
                            <field name="tools_lines" nolabel="1">
                                <tree editable="top">
                                    <field name="product_id"/>
                                    <!--                                    <field name="name"/>-->
                                    <field name="qty"/>
                                    <field name="uom_id"/>
                                    <field name="price_unit"/>
                                    <field name="tax_id"/>
                                    <field name="price_subtotal"/>
                                    <field name="price_total"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_labour_costs" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </page>
                    </notebook>
                    <separator string="Autre Charges"/>
                    <notebook>
                        <page name="info" string="Overheads">
                            <field name="overhead_lines" nolabel="1">
                                <tree editable="top">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="qty"/>
                                    <field name="uom_id"/>
                                    <field name="price_unit"/>
                                    <field name="tax_id"/>
                                    <!--                                    <field name="price_subtotal"/>-->
                                    <field name="price_total"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_overhead_costs" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </page>
                    </notebook>
                    <separator string="Facturation"/>
                    <notebook>
                        <page name="info" string="Overheads">
                            <field name="overhead_lines" nolabel="1">
                                <tree editable="top">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="qty"/>
                                    <field name="uom_id"/>
                                    <field name="price_unit"/>
                                    <field name="tax_id"/>
                                    <!--                                    <field name="price_subtotal"/>-->
                                    <field name="price_total"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_overhead_costs" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>

        </field>
    </record>


    <!--action to open the project Template-->
